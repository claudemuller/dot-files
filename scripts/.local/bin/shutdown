#!/usr/bin/env sh

choices="Quit bspwm\nShutdown\nReboot"
question="What do I do?"
chosen=$(echo -e "$choices" | dmenu -i -p "$question")

case "$chosen" in
    #"Quit bspwm") bspc quit ;;
    "Quit dwm") killall xinit ;;
    Shutdown) /bin/shutdown -h now ;;
    Reboot) /bin/shutdown -r now ;;
esac

